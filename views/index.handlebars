<div class="container">

  <div class="jumbotron">
    <img src="/assets/images/happy_burger.jpg" alt="Happy">

    <h1>Time to eat the burger!</h1>

  </div>


  <div class="row">
    <div class="col-md-4 col-md-offset-1">

      <ul class="list-group">

        {{#each burgers}}

          {{#unless this.devoured}}

          <li class="list-group-item">

            <p class="lead">{{this.burgers_name}}</p>

            <span class= "input-group-btn">

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">

                <input type="hidden" name="devoured" value="true">

                <button class="btn btn-default" type="submit">EAT</button>

              <form>

              <span>
          </li>

            {{/unless}}

          {{/each}}
      </ul>

    </div>

  </div>


  <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <div class="panel panel-default">
          <ul class="list-group">
            {{#each burgers}}

              {{#if this.devoured}}

                <li class="list-group-item">
                  <p class="lead">{{this.burgers_name}}</p>

                </li>

              {{/if}}

            {{/each}}

          </ul>

        </div>

      </div>
  </div>


  <div class="col-md-10 col-md-offset-2">
    <p class="lead">Enter the name of the burger you want to eat and click "submit".</p>

    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">

        <textarea name="form-control input-lg" type="text" name="b_name" rows="4"></textarea>

      </div>

      <button type="btn btn-default btn-md" type="submit" name="Add Burger"></button>

    </form>

  </div>

</div>
